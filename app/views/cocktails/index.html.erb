<div class="container">
  <h1>Cocktail List</h1>

  <ul class="index_cocktails">
    <% @cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <% end %>
  </ul>
  <br>
  <br>
  <%= link_to 'Create a new cocktail!', new_cocktail_path, class: 'btn btn-primary'  %>
</div>
